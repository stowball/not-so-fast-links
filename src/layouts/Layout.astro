---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html
	class=`
		font-open-sans
		bg-fixed
		bg-gradient-to-b
		from-[#E8ECFC]
		via-[#FDF9EB]
		to-[#F8E7E6]
	`
	lang="en"
>
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Various links about the the tabletop game, Not So Fast, by Matt Stow."
		/>
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter&family=Open+Sans:wght@300..800&display=swap"
			rel="stylesheet"
		/>
		<meta name="author" content="Matt Stow" />
	</head>
	<body>
		<slot />
	</body>
</html>
